{
  "name": "barbarich",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "development:tailwind:frontend": "npx @tailwindcss/cli -i ./src/css/tailwind.css -o ./theme/style.css --content './theme/**/*.html'",
    "development:esbuild": "npx esbuild ./src/js/main.js --target=esnext --bundle --outdir=./theme/js --out-extension:.js=.min.js",
    "watch:esbuild": "npm run development:esbuild -- --watch",
    "watch:tailwind:frontend": "npm run development:tailwind:frontend -- --watch",
    "watch:vite": "vite",
    "watch": "run-p \"watch:**\"",
    "build": "vite build"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.1",
    "@tailwindcss/vite": "^4.0.1",
    "esbuild": "^0.24.2",
    "npm-run-all": "^4.1.5",
    "vite": "^6.0.5",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "swiper": "^11.2.2",
    "tailwindcss": "^4.0.1"
  }
}
