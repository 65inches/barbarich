<div class='inline-flex w-full flex-col gap-2.5 md:flex-row md:items-center'>

  <label
    class='block whitespace-nowrap font-regular leading-none text-blue-500'
    for='{{id}}'
  >
    {{label}}
  </label>

  <div data-id='idd' class='select mt-0 {{class}}'>
    <input id='idd' type='text' class="py-3.5" placeholder='{{placeholder}}' readonly />
    <ul class='options'>
      <li class='option text-blue-500 hover:text-white'>Choice 1</li>
      <li class='option text-blue-500 hover:text-white'>Choice 2</li>
      <li class='option text-blue-500 hover:text-white'>Choice 3</li>
    </ul>
  </div>
</div>