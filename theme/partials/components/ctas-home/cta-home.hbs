<div class='@container md:h-full'>
  <a href='#'
    class='block group/cta h-full lg:h-100 xl:h-full  p-5 @min-[480px]:p-7.5 relative overflow-hidden rounded-[20px] transition duration-300 hover:translate-y-[-5px] cursor-pointer
      {{class}}'
  >
    <div
      class='xl:group-[.cta-two]/cta:max-w-65 xl:group-[.cta-three]/cta:max-w-65 lg:h-100  relative z-[2] flex flex-col items-start justify-start gap-2.5'
    >
      <h2
        class='text-[30px] font-semibold leading-none text-blue-800 lg:text-[32px] xl:group-[.cta-one]/cta:text-[50px]'
      >
        {{title}}
      </h2>
      <p
        class='mb-2 text-lg font-normal leading-[1.33] text-blue-800 group-[:not(.xl-small)]:mt-2'
      >
        {{content}}
      </p>
      <span class='btn-primary relative z-[1] whitespace-nowrap group-hover/cta:text-white group-hover/cta:bg-blue-800'>
        Commander
        <svg
          class="max-lg:hidden"
          width='10'
          height='12'
          viewBox='0 0 10 12'
          fill='none'
          aria-hidden='true'
        >
          <path
            d='M1 3.00293H9M9 3.00293V11.0029M9 3.00293L1 11.0029'
            stroke='white'
            stroke-width='2'
            stroke-linejoin='round'
          ></path>
        </svg>
      </span>
    </div>

    <div class='lg:absolute bottom-2.5 right-2.5 z-[1] '>

      <img
        class='object-fit relative z-[1] h-[236px] md:max-lg:group-[.cta-four]/cta:h-auto md:max-lg:group-[.cta-four]/cta:w-[185px] xl:h-[260px] xl:group-[.cta-one]/cta:h-auto max-md:ml-auto max-lg:ml-auto max-lg:mt-[-50px] max-lg:max-w-[55%] max-lg:h-auto {{imgClass}}'
        src='{{img}}'
        alt=''
      />

    </div>
    <div
      class='size-80 xl:group-[.cta-four]/cta:-righ xl:group-[.cta-one]/cta:size-100 absolute -bottom-[110px] -right-[50px] rounded-full border-8 border-white bg-white opacity-40 xl:group-[.cta-four]/cta:-bottom-[109px] xl:group-[.cta-one]/cta:-bottom-[90px] xl:group-[.cta-one]/cta:-right-[62px]'
    >
    </div>
  </a>
</div>